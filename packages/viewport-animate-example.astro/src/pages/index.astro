---
import "animate.css/animate.css";
import "shared-examples/dist/styles.css"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} /><link
      href="https://cdn.jsdelivr.net/npm/reset-css/reset.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Spline+Sans+Mono:wght@300&display=swap"
      rel="stylesheet"
    />
    <title>Astro</title>
    <script>
      import { ViewportAnimate } from "viewport-animate";

      window.addEventListener("load", () => {
        new ViewportAnimate({
          attribute: "data-va",
          observerThreshold: 0.01,
        }).init();
      });
    </script>
  </head>
  <body>
    <div class="scroll-container">
      <section>
        <div class="table-container">
          <table>
            <th colspan="2">
              <p>data-va="slideInDown +1.65s"</p>
            </th>
            <tr>
              <th class="property">Animation name:</th>
              <td class="value">slideInDown</td>
            </tr>
            <tr>
              <th class="property">Duration:</th>
              <td class="value">1.65s <span>(default)</span></td>
            </tr>
            <tr>
              <th class="property">Delay:</th>
              <td class="value">0s <span>(default)</span></td>
            </tr>
            <tr>
              <th class="property">Iteration count:</th>
              <td class="value">0s <span>(default)</span></td>
            </tr>
            <tr>
              <th class="property">Repeat:</th>
              <td class="value">false <span>(default)</span></td>
            </tr>
          </table>
        </div>
        <div data-va="slideInDown +1.65s" class="circle example-target"></div>
      </section>

      <section>
        <div class="table-container">
          <table>
            <th colspan="2">
              <p>data-va="! jello +1s"</p>
            </th>
            <tr>
              <th class="property">Animation name:</th>
              <td class="value">jello</td>
            </tr>
            <tr>
              <th class="property">Duration:</th>
              <td class="value">1s</td>
            </tr>
            <tr>
              <th class="property">Delay:</th>
              <td class="value">0s <span>(default)</span></td>
            </tr>
            <tr>
              <th class="property">Iteration count:</th>
              <td class="value">infinite</td>
            </tr>
            <tr>
              <th class="property">Repeat:</th>
              <td class="value">N/A</td>
            </tr>
          </table>
        </div>
        <div data-va="! jello +1s" class="square example-target"></div>
      </section>

      <section>
        <div class="table-container">
          <table>
            <th colspan="2">
              <p>data-va="*0.01 fadeInLeft 1x"</p>
            </th>
            <tr>
              <th class="property">Animation name:</th>
              <td class="value">fadeInLeft</td>
            </tr>
            <tr>
              <th class="property">Duration:</th>
              <td class="value">1s <span>(default)</span></td>
            </tr>
            <tr>
              <th class="property">Delay:</th>
              <td class="value">0s <span>(default)</span></td>
            </tr>
            <tr>
              <th class="property">Iteration count:</th>
              <td class="value">1</td>
            </tr>
            <tr>
              <th class="property">Repeat:</th>
              <td class="value">true</td>
            </tr>
          </table>
        </div>
        <div data-va="*0.01 fadeInLeft 1x" class="square example-target"></div>
      </section>

      <section>
        <div class="table-container">
          <table>
            <th colspan="2">
              <p>data-va="@0.1 rotateIn +2500ms 0.7x"</p>
            </th>
            <tr>
              <th class="property">Animation name:</th>
              <td class="value">rotateIn</td>
            </tr>
            <tr>
              <th class="property">Duration:</th>
              <td class="value">2.5s</td>
            </tr>
            <tr>
              <th class="property">Delay:</th>
              <td class="value">0s <span>(default)</span></td>
            </tr>
            <tr>
              <th class="property">Iteration count:</th>
              <td class="value">0.7</td>
            </tr>
            <tr>
              <th class="property">Repeat:</th>
              <td class="value">false <span>(default)</span></td>
            </tr>
          </table>
        </div>
        <div data-va="@0.1 rotateIn +2500ms 0.7x" class="square example-target"></div>
      </section>

      <section>
        <div class="table-container">
          <table>
            <th colspan="2">
              <p>data-va="*0.1 fadeIn +5s -0.7s 0.235x"</p>
            </th>
            <tr>
              <th class="property">Animation name:</th>
              <td class="value">fadeIn</td>
            </tr>
            <tr>
              <th class="property">Duration:</th>
              <td class="value">5s</td>
            </tr>
            <tr>
              <th class="property">Delay:</th>
              <td class="value">0.7s</td>
            </tr>
            <tr>
              <th class="property">Iteration count:</th>
              <td class="value">0.234</td>
            </tr>
            <tr>
              <th class="property">Repeat:</th>
              <td class="value">true</td>
            </tr>
          </table>
        </div>
        <div data-va="*0.1 fadeIn +5s -0.7s 0.235x" class="square example-target"></div>
      </section>
    </div>
  </body>
</html>
